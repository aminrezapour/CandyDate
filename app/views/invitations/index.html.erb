<div class="row">
  <div class="col-xs-2" id="amin6">
    <%= render partial: "leftbar", locals: {user: @user} %>
  </div>

  <div class="col-xs-10">

        <div class="row" id="amin4">
          <h3>Invites</h3>
        </div>

        <% if @invitations_sents.count < 1 %>
            <div class="row" id="amin11">
              Start a new invitation by clicking on <i class="glyphicon glyphicon-plus"> </i>&nbsp;!
            </div>
        <% end %>

        <%= link_to user_find_user_path(current_user) do %>
          <div class="row" id="amin12">
            <h3><i class="glyphicon glyphicon-plus"> </i>&nbsp;</h3>
          </div>
        <% end %>

        <div id='appointments-index'>
          <% @invitations_sents.each do |i| %>
              <%= render({ partial: 'invitations/invitation', locals: {invitation: i} }) %>
          <% end %>
        </div>


        <div class="row" id="amin4">
          <h3>Invitations</h3>
        </div>

        <% if @invitations_receiveds.count < 1 %>
            <div class="row" id="amin11">
              No one has invited you yet.
            </div>
        <% end %>

        <div id='appointments-index'>
          <% @invitations_receiveds.each do |i| %>
              <%= render({ partial: 'invitations/invitation', locals: {invitation: i} }) %>
          <% end %>
        </div>

  </div>

</div>
