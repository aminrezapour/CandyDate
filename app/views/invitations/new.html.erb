<div class="row">

    <div class="col-xs-2" id="amin6">
      <ul class="nav nav-pills nav-stacked">
        <li>
          <%= link_to user_appointments_path(current_user), id: "amin7" do %>
            <h3><i class="glyphicon glyphicon-heart"> </i>&nbsp;</h3>
          <% end %>
        </li>
        <li>
          <%= link_to user_suggestions_path(current_user), id: "amin7" do %>
            <h3><i class="glyphicon glyphicon-map-marker"> </i>&nbsp;</h3>
          <% end %>
        </li>
        <li>
          <%= link_to user_invitations_path(current_user), id: "amin7" do %>
            <h3><i class="glyphicon glyphicon-envelope"> </i>&nbsp;</h3>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="col-xs-10">

      <div class="row" id="amin4">
        <h3>Invitations</h3>
      </div>
      <div class="row" id="amin9">
        <h3>New Invitation</h3>
      </div>
      <div class="row">
        <h3>Name and number add</h3>
      </div>

      <%= form_tag [@inviter, @invitation] do %>

        <%= hidden_field_tag(:invitee_tel, @invitee_tel) %>

        <h3>Your Suggestions</h3>
        <% if @inviter_suggestions %>
          <% @inviter_suggestions.each do |s| %>
              <%= check_box_tag("suggestion_id[]", s.id) %>
              <h4><%= s.name %></h4>
          <% end %>
        <% else %>
          <h4>You have no suggestion. Make some.</h4>
        <% end %>

        <h3>His/Her public Suggestions</h3>
        <% if @invitee_suggestions %>
          <% @invitee_suggestions.each do |s| %>
              <%= check_box_tag("suggestion_id[]", s.id) %>
              <h4><%= s.name %></h4>
              <p><%= s.description %></p>
          <% end %>
        <% else %>
          <h4>None</h4>
        <% end %>

        <h3>In the next 7 days, choose the days that you are free</h3>
        <% @availables.each do |a| %>
            <%= check_box_tag("available_id[]", a) %>
            <%= a.strftime("%A") %>
        <% end %>

        <h4>A text message will be sent to the above number to setup this date</h4>
        <div class="row">
          <%= submit_tag("Create", class: "btn btn-block", id: "amin12") %>
        </div>

      <% end %>

    </div>

</div>
