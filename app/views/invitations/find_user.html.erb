<div class="row">

    <div class="col-xs-2" id="amin6">
      <%= render partial: "leftbar", locals: {user: @user} %>
    </div>

    <div class="col-xs-10">

      <div class="row" id="amin4">
        <h3>Invitations</h3>
      </div>
      <div class="row" id="amin9">
        <h3>New Invitation</h3>
      </div>

      <%= form_tag(new_user_invitation_path(current_user), method: :get) do %>

          <div class="input-group"  style="padding:20px;">
            <span class="input-group-addon" id="basic-addon1">
              <%= button_tag(type: 'submit') do %>
               <i class="glyphicon glyphicon-search"></i>&nbsp;
              <% end %>
            </span>
            <input type="text" class="form-control" name="tel" id="tel" placeholder="his or her number" aria-describedby="basic-addon1">
          </div>
      <% end %>

    </div>

</div>
