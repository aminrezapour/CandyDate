<div class="row">
  <div class="col-xs-2" id="amin6">
    <%= render partial: "leftbar", locals: {user: current_user} %>
  </div>

  <div class="col-xs-10">

    <div class="row" id="amin4">
      <h3>Invitation</h3>
    </div>

    <div class="row" id="amin16">
      <h5>..response pending</h5>
    </div>

    <div class="row">
      <div class="col-xs-10">
        <h3>Invited By: <%= @invitation.inviter.name %></h3>
        <h3>To: <%= @invitation.invitee ? @invitation.invitee.name : @invitation.invitee_tel  %></h3>
        <p>invitation sent on <%= @invitation.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%A, %B %e") %></p>
      </div>

      <% if @invitation.inviter == current_user %>
        <%= link_to [current_user, @invitation], method: :delete, data: {confirm: 'Are you sure?'} do %>
          <div class="col-xs-2" id="amin11">
            <h5>Delete</h5>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @invitation.inviter != current_user %>

      <div class="row">
          <%= form_tag [@user, @appointment] do %>

            <%= hidden_field_tag(:invitation_id, @invitation.id) %>

            <div class="row" id="invitation-suggestion">

              <h3>Suggested Activity</h3>
              <% @suggestions.each do |s| %>
                <%= content_tag :div, class: "amin18 location", id: s.id do %>
                  <h4>
                    <%= s.name %>
                    <% if s.event %>
                      <i class="glyphicon glyphicon-tags"> </i>&nbsp;
                    <% end %>
                  </h4>
                <% end %>
              <% end %>

            </div>
            <div id="suggestion-result"></div>

            <div class="row" id="available-days">

              <h3>Days I'm free</h3>
              <small>
                (Your availablities are private and only visible to you.)
              </small>
              <br>
              <% @availables.each do |a| %>
                <% if a == Date.today %>
                  <%= content_tag :div, class: "col-xs-6 amin18 day", id: a do %>
                      <h4>Tonight</h4>
                  <% end %>
                <% elsif a == Date.today + 1%>
                  <%= content_tag :div, class: "col-xs-6 amin18 day", id: a do %>
                      <h4>Tomorrow</h4>
                  <% end %>
                <% else %>
                      <%= content_tag :div, class: "col-xs-4 amin19 day", id: a do %>
                          <h4><%= a.in_time_zone("Pacific Time (US & Canada)").strftime("%a") %></h4>
                      <% end %>
                <% end %>
              <% end %>

            </div>
            <div id="days-result"></div>

              <div class="row">
                <%= submit_tag("Create a Date", class: "btn btn-block save", id: "amin12") %>
              </div>
            <% end %>

      </div>

    <% else %>

      <h3>Suggested Activity</h3>
      <% @suggestions.each do |s| %>
        <%= content_tag :div, class: "amin18 location", id: s.id do %>
          <h4>
            <%= s.name %>
            <% if s.event %>
              <i class="glyphicon glyphicon-tags"> </i>&nbsp;
            <% end %>
          </h4>
        <% end %>
      <% end %>

    <% end %>


  </div>

</div>
