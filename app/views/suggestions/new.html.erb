<%= form_for [@user, @suggestion] do |f| %>

    <div class="row">

        <div class="col-xs-2" id="amin6">
          <ul class="nav nav-pills nav-stacked">
             <li id="amin12">
                 <%= button_tag(type: "submit", class: "btn", id: "amin12") do %>
                      <i class="glyphicon glyphicon-ok"></i>
                  <% end %>
             </li>
             <li>
               <%= link_to user_suggestions_path(@user),  id: "amin17" do %>
                 <i class="glyphicon glyphicon-arrow-left"></i>
               <% end %>
             </li>
          </ul>
        </div>

        <div class="col-xs-10">

          <div class="row" id="amin4">
              <h3>New Place</h3>
          </div>

          <div class="row">
              <div class="col-xs-10">

                <% if @suggestion.errors.any? %>
                <div class="alert alert-danger">
                   <h4><%= pluralize(@suggestion.errors.count, "error") %> found.</h4>
                   <ul>
                     <% @suggestion.errors.full_messages.each do |msg| %>
                       <li><%= msg %></li>
                     <% end %>
                   </ul>
                 </div>
               <% end %>


                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, rows: 4, class: 'form-control', placeholder: "Include the neighborhood and add the date and time here if it's an event." %>
                </div>

                <div class="form-group">
                      <%= f.label :event, class: 'checkbox' do %>
                        <%= f.check_box :event %> Check here if it's a concert or an event.
                      <% end %>
                </div>

                <div class="form-group">
                      <%= f.label :public, class: 'checkbox' do %>
                        <%= f.check_box :public %> Public
                      <% end %>
                </div>

              </div>
          </div>

        </div>

    </div>

<% end %>
