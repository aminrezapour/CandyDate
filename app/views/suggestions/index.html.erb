<h1>All Suggestions</h1>

<div>
  <%= link_to "New Suggestion", new_user_suggestion_path(current_user), class: 'btn btn-success' %>
</div>

<% @suggestions.each do |s| %>
  <div class="row">

    <div class="col-md-4">
      <div class="media-head">
        <%= link_to s.name, edit_user_suggestion_path(current_user, s) %>
      </div>
      <div class="media-body">
        <small><%= s.description %></small>
      </div>
    </div>

    <%= link_to "Delete", [current_user, s], method: :delete, class: 'btn btn-danger' %>

  </div>
<% end %>
