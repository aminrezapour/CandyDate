<div class="row">
  <%= link_to(edit_user_suggestion_path(current_user, suggestion)) do %>
    <div class="col-xs-8" id="amin8">
      <h3><%= suggestion.name %></h3>
      <small><%= suggestion.description %></small>
    </div>
  <% end %>
  <%= link_to edit_user_suggestion_path(current_user, suggestion) do %>
    <div class="col-xs-2" id="amin16">
      <h5>Edit</h5>
    </div>
  <% end %>
