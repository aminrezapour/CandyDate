$('#calendar-view').click(function() {
  $('#appointments-index').html("<%= j render partial: 'appointments/calendar', locals: {appointments: @appointments, user: @user} %>");
});
$('#all-appointments').click(function() {
  $('#appointments-index').html("<%= j render @appointments %>");
});
$('#upcoming-appointments').click(function() {
  $('#appointments-index').html("<%= j render @appointments.upcoming %>");
});
$('#past-appointments').click(function() {
  $('#appointments-index').html("<%= j render @appointments.past %>");
});
