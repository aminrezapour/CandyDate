<div class="row">
    <div class="col-xs-5" id="amin3">

          <div class="pull-right">
            <%= image_tag @user.image, size: "60x60" %>
          </div>

    </div>

    <div class="col-xs-7" id="amin3">

          <div class="pull-left">
            <h2 class="media-heading"><b><%= @user.name %></b></h2>

            <% if @user.telephone.nil? %>
                <%= form_for @user do |f| %>
                     <div class="form-group">
                       <%= f.text_field :telephone, class: 'form-control', placeholder: "enter your phone" %>
                     </div>
                     <div class="form-group">
                       <%= f.submit "Save", class: 'btn btn-success' %>
                     </div>
                <% end %>
            <% else %>
                  <h4 class="media-heading"><%= @user.telephone %></h4>
            <% end %>

        </div>

    </div>

</div>

<% unless @user.telephone.nil? %>
    <%= link_to find_user_path do %>
      <div class="row" id="amin4">
        <h3>Setup a New Date</h3>
      </div>
    <% end %>
<% end %>

<%= link_to user_suggestions_path(current_user) do %>
  <div class="row" id="amin5">
    <h3>Places</h3>
  </div>
<% end %>
<%= link_to user_availables_path(current_user) do %>
  <div class="row" id="amin4">
    <h3>Open Times</h3>
  </div>
<% end %>
<%= link_to user_appointments_path(current_user) do %>
  <div class="row" id="amin5">
    <h3>All Dates</h3>
  </div>
<% end %>
